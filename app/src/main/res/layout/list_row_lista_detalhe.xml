<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/lista_nome_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produto X"
        android:textColor="@color/preto"
        android:textSize="20sp"
        android:textStyle="bold"
        android:singleLine="false"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/lista_produto_quant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quant:03"
        android:textColor="@color/azul_escuro"
        android:textSize="15sp"
        android:textStyle="normal"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:layout_below="@+id/lista_nome_produto" />

    <TextView
        android:id="@+id/lista_usuario_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produto de Bruno"
        android:textColor="@color/azul_escuro"
        android:textSize="15sp"
        android:textStyle="normal"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:layout_below="@+id/lista_produto_quant"
        android:visibility="gone" />

    <TextView
        android:id="@+id/lista_produto_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 00,00"
        android:textColor="@color/azul_escuro"
        android:textSize="15sp"
        android:textStyle="normal"
        android:singleLine="true"
        android:maxLines="1"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/lista_usuario_lista"
        android:visibility="gone" />

    <TextView
        android:id="@+id/nao_contem_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não contém"
        android:textColor="@color/azul_escuro"
        android:textSize="15sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:maxLines="1"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/lista_usuario_lista"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/produto_pref_escolhido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produto escolhido: X"
        android:textColor="@color/vermelho"
        android:textSize="15sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:maxLines="2"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/lista_produto_preco"
        android:visibility="gone" />

</RelativeLayout>